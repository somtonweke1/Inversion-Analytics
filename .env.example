# Database Configuration
# For production, use Vercel Postgres connection string
# Example: postgres://username:password@host:port/database?sslmode=require
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
# Set this to your production domain
NEXTAUTH_URL="https://your-domain.vercel.app"

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Admin Credentials
ADMIN_EMAIL="admin@axiomanalytics.com"
ADMIN_PASSWORD="your-secure-password"

# Email Service (Optional - for sending reports)
# Get your API key from https://resend.com
RESEND_API_KEY="your-resend-api-key"
